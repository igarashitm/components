<switchyard xmlns="urn:switchyard-config:switchyard:2.0"
    xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912"
    xmlns:cxfrs="urn:switchyard-component-camel-cxfrs:config:2.0">

    <sca:composite name="cxfRsTest" targetNamespace="urn:cxfrs-core:test:2.0">
        <sca:service name="cxfRsTest" promote="SimpleCxfRsService">
            <cxfrs:binding.cxfrs>
                <cxfrs:additionalUriParameters>
                    <cxfrs:parameter name="properties.foo" value="bar"/>
                </cxfrs:additionalUriParameters>
                <cxfrs:cxfRsURI>http://localhost:8080/testRS</cxfrs:cxfRsURI>
                <cxfrs:resourceClasses>org.switchyard.component.camel.cxfrs.HelloWorldService</cxfrs:resourceClasses>
                <cxfrs:httpClientAPI>true</cxfrs:httpClientAPI>
                <cxfrs:synchronous>true</cxfrs:synchronous>
                <cxfrs:throwExceptionOnFailure>true</cxfrs:throwExceptionOnFailure>
                <cxfrs:maxClientCacheSize>5</cxfrs:maxClientCacheSize>
                <cxfrs:setDefaultBus>true</cxfrs:setDefaultBus>
                <cxfrs:bindingStyle>SimpleConsumer</cxfrs:bindingStyle>
            </cxfrs:binding.cxfrs>
        </sca:service>
    </sca:composite>
</switchyard>
